	</path>

    <taskdef resource="net/sf/antcontrib/antcontrib.properties">
    	<classpath>
    		<pathelement location="${extra_lib.dir}/ant-contrib.jar"/>
      	</classpath>
    </taskdef>

	<!-- sub tasks -->
	<target name="init">
