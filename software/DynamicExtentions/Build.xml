	<loadfile property="dist.revision" srcFile="./.svn/entries">  
		<filterchain>  
			<headfilter lines="1" skip="4"/>
		</filterchain>  
	</loadfile>
	<path id="app.classpath">
		<pathelement location="${base.dir}/lib/server/postgresql-8.1-405.jdbc3.jar"/>
