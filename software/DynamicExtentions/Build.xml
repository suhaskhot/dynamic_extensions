	<!-- Creates the WAR (Web Application Archive) file of the application -->
	<target name="build__war" depends="compile">
		<delete file="dynamicExtensions.war"/>
		<war destfile="dynamicExtensions.war" webxml="src/conf/web.xml">
			<fileset dir="${base.dir}">
<include name="src/web/stylesheets/**/*"/>
				<include name="src/web/images/**/*"/>
				<include name="src/web/javascripts/**/*"/>
				<include name="src/web/pages/**/*"/>
				<include name="src/web/dhtml/**/*"/>
				<include name="src/web/runtime/**/*"/>
				<include name="src/web/taglibs/**/*"/>
				<include name="lib/server/**/*"/>
				<exclude name="**/dom4j.jar"/>
				<exclude name="**/jboss-common-jdbc-wrapper.jar"/>
				<exclude name="**/jboss.jar"/>
				<include name="**/log4j.jar"/>
				<include name="binaries/classes/**/*"/>
				<include name="src/conf/error.jsp"/>
				<include name="src/conf/web.xml"/>
				<include name="src/conf/dynamicextensions-struts-config.xml"/>
