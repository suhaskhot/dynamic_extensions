	</target>
	<!-- Creates the WAR (Web Application Archive) file of the application -->
		<target name="build_app_war" depends="compile,init_build_war">
			<delete file="../DynamicExtentions/build/dynamicExtensions.war"/>
			<war destfile="dynamicExtensions.war" webxml="src/conf/web.xml">
				<fileset dir="${temp.dir}">
					<include name="**/*"/>
				</fileset>
				<manifest>
					<section name="${DynamicExtensions.jar.details}">
		    	        <attribute name="Version" value="${DynamicExtensions.jar.version}"/>
						<attribute name="Built-By" value="${DynamicExtensions.jar.creator}" />
						<attribute name="Build-on" value="${TODAY_IND}" />
						<attribute name="SVN-URL" value="${dist.revision}" />
		    	    </section>
		   		</manifest>
	 		</war>
			<copy file="dynamicExtensions.war" todir="${dist.dir}" overwrite="true"/>
			<copy file="dynamicExtensions.war" todir="build" overwrite="true"/>
			<delete file="dynamicExtensions.war" />
			<delete dir="${temp.dir}" />
		</target>
	
	<target name="init_build_war">
		<delete dir="${temp.dir}" />
		<mkdir dir="${temp.dir}" />
		<mkdir dir="${temp.dir}/WEB-INF/classes" />
		<mkdir dir="${temp.dir}/de" />
		<mkdir dir="${temp.dir}/WEB-INF/lib" />
		<mkdir dir="${temp.dir}/de/css" />
		<mkdir dir="${temp.dir}/de/jss" />
		<mkdir dir="${temp.dir}/de/dhtml_comp" />
		<copy todir="${temp.dir}/WEB-INF/classes">
			<fileset dir="binaries/classes" >
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${temp.dir}/WEB-INF/lib">
			<fileset dir="lib/server" >
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${temp.dir}/WEB-INF">
			<fileset dir="src/web/taglibs" >
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${temp.dir}/">
			<fileset dir="src/web" >
				<include name="runtime/**/*"/>
				<exclude name="taglibs/**/*"/>
			</fileset>
		</copy>
		<copy todir="${temp.dir}/de">
			<fileset dir="src/web" >
				<include name="images/**/*"/>
				<include name="pages/**/*"/>
			</fileset>
		</copy>
		<copy todir="${temp.dir}/de/css">
			<fileset dir="src/web/stylesheets" >
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${temp.dir}/de/jss">
			<fileset dir="src/web/javascripts" >
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${temp.dir}/de/dhtml_comp">
					<fileset dir="src/web/dhtml" >
						<include name="**/*"/>
