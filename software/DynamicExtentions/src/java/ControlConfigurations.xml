<?xml version="1.0" encoding="UTF-8"?>
<controls>
	<!-- rules for text control start-->
	<control name="TextControl"
		display-label="eav.caption.TextControlCaption"
		jspName="/pages/de/toolTypeHTML/TextControl.jsp"
		image-path="images/de/controlimages/TextControlImage.jpeg">
		<common-validation>
		<common-validation-rule name="unique" isImplicit="false" />
		<common-validation-rule name="required" isImplicit="false" />
		</common-validation>
		<datatypes>
			<dataType name="Text">
				<validations>
					<validation-rule name="textLength" isImplicit="true" />
					<validation-rule name="characterSet" isImplicit="true" />
				</validations>
			</dataType>
			<dataType name="Number">
				<validations>
					<validation-rule name="number" isImplicit="true" />
					<validation-rule name="range" isImplicit="false" />
				</validations>
			</dataType>
		</datatypes>
	</control>
	<!-- rules for text control end-->

	<!-- rules for Checkbox control start-->
	<control name="CheckboxControl"
		display-label="eav.caption.CheckboxControlCaption"
		jspName="/pages/de/toolTypeHTML/CheckboxControl.jsp"
		image-path="images/de/controlimages/CheckBoxImage.jpeg">
	</control>
	<!-- rules for CheckboxControl control end-->

	<!-- rules for Radio button control start-->
	<control name="RadioButtonControl"
		display-label="eav.caption.RadioButtonControlCaption"
		jspName="/pages/de/toolTypeHTML/RadioButtonControl.jsp"
		image-path="images/de/controlimages/RadioButtonImage.jpeg">
	</control>
	<!-- rules for Radio button  control end-->

	<!-- rules for ComboboxControl control start-->
	<control name="ComboboxControl"
		display-label="eav.caption.ComboboxControlCaption"
		jspName="/pages/de/toolTypeHTML/ComboboxControl.jsp"
		image-path="images/de/controlimages/ComboboxImage.jpeg">
		<common-validation>
		<common-validation-rule name="required" isImplicit="false" />
		</common-validation>
		<datatypes>
			<dataType name="Text">
				<validations></validations>
			</dataType>
			<dataType name="Number">
				<validations></validations>
			</dataType>
			<dataType name="Yes/No">
				<validations></validations>
			</dataType>
		</datatypes>
	</control>
	<!-- rules for ComboboxControl control end-->

	<!-- rules for Date control start-->
	<control name="DateControl"
		display-label="eav.caption.DateControlCaption"
		jspName="/pages/de/toolTypeHTML/DateControl.jsp"
		image-path="images/de/controlimages/DateControlImage.jpeg">
		<common-validation>
		<common-validation-rule name="date" isImplicit="true" />
		<common-validation-rule name="allowpastandpresentdate" isImplicit="false" />
		<common-validation-rule name="required" isImplicit="false" />
		<common-validation-rule name="dateRange" isImplicit="false" />
		<common-validation-rule name="allowfuturedate" isImplicit="false" />		
		</common-validation>
		
	</control>
	<!-- rules for Date control end-->

	<!-- rules for File Upload control start -->
	<control name="FileUploadControl"
		display-label="eav.caption.FileUploadControlCaption"
		jspName="/pages/de/toolTypeHTML/FileUploadControl.jsp"
		image-path="images/de/controlimages/FileUploadImage.jpeg">
		<common-validation>
		<common-validation-rule name="required" isImplicit="false" />
		</common-validation>
	</control>
		<!-- rules for File Upload control end-->
	<!-- <control name="AddSubFormControl"
		display-label="eav.caption.AddSubFormControl">
	</control>
	-->
</controls>