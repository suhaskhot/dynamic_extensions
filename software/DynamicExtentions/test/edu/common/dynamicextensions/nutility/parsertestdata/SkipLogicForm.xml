<!-- Used by unit test: ContainerParserTest.testParseContainerWithSkipLogic -->
<form>
	<view>
		<name>PersonProfile</name>         		
		<caption>Person Profile</caption>       	

		<row>
			<label>
				<name>FormHeading</name>
				<userDefinedName>Form Heading</userDefinedName>       		
				<heading>Fill in correct personal details for loan processing</heading>	
			</label>		
		</row>
		
		<row>
			<radioButton>
				<name>gender</name>
				<userDefinedName>Gender</userDefinedName>       		
				<caption>Gender</caption>
				<phi>true</phi>
				<mandatory>true</mandatory>
				<options> 
					<option>
						<value>Male</value>
					</option>
					<option>
						<value>Female</value>
					</option>
					<option>
						<value>Unknown</value>
					</option>
				</options>
			</radioButton>
		</row>
		
		<row>
			<checkBox>
				<name>sourcesOfIncome</name>
				<userDefinedName>Sources of Income</userDefinedName>       		
				<caption>Sources of Income</caption>
				<options>
					<option>
						<value>Salary</value>
					</option>
						
					<option>
						<value>Agriculture</value>
					</option>
					<option>
						<value>Gambling</value>
					</option>
					<option>
						<value>Organized Sector Business</value>
					</option>
					<option>
						<value>Others</value>
					</option>	
				</options>
			</checkBox>
		</row>		

		<row>
			<datePicker>
				<name>dateOfBirth</name>
				<userDefinedName>Date Of Birth</userDefinedName>       		
				<caption>Date Of Birth</caption>
				<phi>true</phi>
				<mandatory>true</mandatory>
				<format>MM-dd-yyyy</format>
				<default>current_date</default>
			</datePicker>
		</row>
		<row>
			<subForm>			
				<name>address</name>
				<userDefinedName>Address</userDefinedName>       		
				<caption>Address</caption>
				<maxEntries>0</maxEntries>
				<showAddMoreLink>true</showAddMoreLink>
               			<row>
					<dropDown>
						<name>city</name>
						<userDefinedName>City</userDefinedName>       		
						<caption>City</caption>
						<mandatory>true</mandatory>
						<options>
							<optionsFile>listOfIndianCities.csv</optionsFile>
						</options>
					</dropDown>  
				</row> 

				<row>
					<textField>
						<name>Company</name> 
						<userDefinedName>Company</userDefinedName>		
						<caption>Company</caption>
						<phi>true</phi>
						<mandatory>true</mandatory>  
						<width>15</width>
						<toolTip>Enter your Company Name</toolTip>              
					</textField>
				</row>	             
			</subForm>
		</row>
	</view>

	<skipRules>
		<skipRule>
			<oneOf>
				<condition field="gender" op="EQ" value="Male"/>
			</oneOf>
			
			<actions>
				<hide field="sourcesOfIncome"/>
				<showPv field="address.city">
					<!-- For permissible values from the csv file, use <optionFile></optionFile> -->
					<options>
						<option>
							<value>Paris</value>
						</option>
						<option>
							<value>Rome</value>
						</option>
						<option>
							<value>New York</value>
						</option>
		                  	</options>
				</showPv>
			</actions>
		</skipRule>
	</skipRules>
</form>

