<?xml version="1.0" encoding="UTF-8"?>
<controls>
	<!-- rules for text control start-->

	<control name="TextControl"
		display-label="eav.caption.TextControlCaption"
		jspName="TextControl.jsp">
		<validations>
			<common-validation-rule name="unique" isImplicit="false">
			</common-validation-rule>
		</validations>
		<datatypes>
			<dataType name="Text">
				<validations></validations>
			</dataType>
			<dataType name="Number">
				<validations>
					<validation-rule name="range" isImplicit="false">
					</validation-rule>
				</validations>
			</dataType>
		</datatypes>
	</control>
	<!-- rules for text control end-->

	<!-- rules for Checkbox control start-->
	<control name="CheckboxControl"
		display-label="eav.caption.CheckboxControlCaption"
		jspName="CheckboxControl.jsp">
	</control>
	<!-- rules for CheckboxControl control end-->

	<!-- rules for Radio button control start-->
	<control name="RadioButtonControl"
		display-label="eav.caption.RadioButtonControlCaption"
		jspName="RadioButtonControl.jsp">
	</control>
	<!-- rules for Radio button  control end-->

	<!-- rules for ComboboxControl control start-->
	<control name="ComboboxControl"
		display-label="eav.caption.ComboboxControlCaption"
		jspName="ComboboxControl.jsp">
		<validations>
			<common-validation-rule name="required"
				isImplicit="false">
			</common-validation-rule>
		</validations>
		<datatypes>
			<dataType name="Text">
				<validations></validations>
			</dataType>
			<dataType name="Number">
				<validations></validations>
			</dataType>
			<dataType name="Yes/No">
				<validations></validations>
			</dataType>
		</datatypes>
	</control>
	<!-- rules for ComboboxControl control end-->

	<!-- rules for Date control start-->

	<control name="DateControl"
		display-label="eav.caption.DateControlCaption"
		jspName="DateControl.jsp">
		<validations>
		</validations>
		<datatypes>
			<dataType name="Date">
				<validations>
					<validation-rule name="date" isImplicit="true">
					</validation-rule>
					<validation-rule name="dateRange"
						isImplicit="false">
					</validation-rule>
				</validations>
			</dataType>
		</datatypes>
	</control>
	<!-- rules for Date control end-->
	
	<!-- rules for File Upload control start-->
	<control name="FileUploadControl"
		display-label="eav.caption.FileUploadControlCaption"
		jspName="FileUploadControl.jsp">
	</control>
	<!-- rules for File Upload control end-->
	
</controls>
