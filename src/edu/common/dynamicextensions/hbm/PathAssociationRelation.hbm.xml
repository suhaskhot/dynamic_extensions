<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.common.dynamicextensions.domain.PathAssociationRelation"
        table="DYEXTN_PATH_ASSO_REL"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">DYEXTN_PATH_ASSO_REL_SEQ</param>
            </generator>
        </id>

        <many-to-one
            name="path"
            class="edu.common.dynamicextensions.domain.Path"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="PATH_ID"
        />

        <many-to-one
            name="association"
            class="edu.common.dynamicextensions.domain.Association"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ASSOCIATION_ID"
        />

        <property
            name="pathSequenceNumber"
            type="int"
            update="true"
            insert="true"
            column="PATH_SEQUENCE_NUMBER"
        />

        <property
            name="sourceInstanceId"
            type="long"
            update="true"
            insert="true"
            column="SRC_INSTANCE_ID"
        />

        <property
            name="targetInstanceId"
            type="long"
            update="true"
            insert="true"
            column="TGT_INSTANCE_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-PathAssociationRelation.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
