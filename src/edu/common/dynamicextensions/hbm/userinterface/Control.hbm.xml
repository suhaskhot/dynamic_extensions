<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.common.dynamicextensions.domain.userinterface.Control"
        table="DYEXTN_CONTROL"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">DYEXTN_CONTROL_SEQ</param>
            </generator>
        </id>

        <property
            name="caption"
            type="string"
            update="true"
            insert="true"
            column="CAPTION"
        />

        <property
            name="cssClass"
            type="string"
            update="true"
            insert="true"
            column="CSS_CLASS"
        />

        <property
            name="isHidden"
            type="boolean"
            update="true"
            insert="true"
            column="HIDDEN"
        />

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
        />

        <property
            name="sequenceNumber"
            type="integer"
            update="true"
            insert="true"
            column="SEQUENCE_NUMBER"
        />

        <property
            name="tooltip"
            type="string"
            update="true"
            insert="true"
            column="TOOLTIP"
        />

        <set
            name="abstractAttributeCollection"
            table="DYEXTN_ATTRIBUTE"
            lazy="false"
            inverse="false"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="CONTROL_ID"
              />

              <one-to-many
                  class="edu.common.dynamicextensions.domain.AbstractAttribute"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Control.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.ListBox"
            table="DYEXTN_LIST_BOX"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="isMultiSelect"
            type="boolean"
            update="true"
            insert="true"
            column="MULTISELECT"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.ComboBox"
            table="DYEXTN_COMBOBOX"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.DataGrid"
            table="DYEXTN_DATA_GRID"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.RadioButton"
            table="DYEXTN_RADIOBUTTON"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.TextField"
            table="DYEXTN_TEXTFIELD"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        <property
            name="columns"
            type="integer"
            update="true"
            insert="true"
            column="NO_OF_COLUMNS"
        />

        <property
            name="isPassword"
            type="boolean"
            update="true"
            insert="true"
            column="IS_PASSWORD"
        />

        <property
            name="isUrl"
            type="boolean"
            update="true"
            insert="true"
            column="IS_URL"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.FileUploadControl"
            table="DYEXTN_FILE_UPLOAD"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="columns"
            type="integer"
            update="true"
            insert="true"
            column="NO_OF_COLUMNS"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.DatePicker"
            table="DYEXTN_DATEPICKER"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.TextArea"
            table="DYEXTN_TEXTAREA"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        <property
            name="columns"
            type="integer"
            update="true"
            insert="true"
            column="TEXTAREA_COLUMNS"
        />

        <property
            name="rows"
            type="integer"
            update="true"
            insert="true"
            column="TEXTAREA_ROWS"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.userinterface.CheckBox"
            table="DYEXTN_CHECK_BOX"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        </joined-subclass>

    </class>

</hibernate-mapping>
